{
  "name": "easy-key-plotter",
  "displayName": "Plot EASY key",
  "description": "Plot timeseries from EASY-R",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/mlisovyi/easy-key-plotter"},
  "icon": "highlighted_text.png",
  "publisher": "mlisovyi",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "easy-key-plotter.plotSelection",
        "title": "Plot Selected EASY Key"
      }
    ],
    "keybindings": [
      {
        "command": "easy-key-plotter.plotSelection",
        "key": "F1",
        "mac": "cmd+shift+[",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "EASY Key Plotter",
      "properties": {
        "easyKeyPlotter.pythonCode": {
          "type": "string",
          "default": "import snb_easy_key_plotter; snb_easy_key_plotter.plot(SELECTION)",
          "description": "The code to execute"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "deploy": "vsce publish --yarn"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "ms-python.python": "^2023"
  },
  "peerDependencies": {
    "ms-python.python": "^2023"
  }
}
